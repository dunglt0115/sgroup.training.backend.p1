<div class="mt-4">
    <h1>Login</h1>

    {{#if errs}}
        {{#each errs}}
        <div class="alert alert-danger mt-4" role="alert">
            {{this}}
        </div>
        {{/each}}
    {{/if}}

    <form class="mt-4" id="loginForm">
        <div class="form-group">
            <label for="email">Email address</label>
            <input name="email" id="email" type="text" class="form-control" placeholder="Enter email" value={{#if values.email}} {{values.email}} {{else}} "" {{/if}}>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input name="password" id="password" type="password" class="form-control" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <span>Need a new account? <a href="/auth/register" class="text-info">Register</a></span>
    </form>
</div>

<script src="/script/auth/public.js"></script>
<script src="/script/auth/login.js"></script>