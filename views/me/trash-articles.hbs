<div class="mt-4">
	<div>
		<a href="/me/stored/articles">Return to book list</a>
	    <h1>Deleted Books</h1>
	</div>

    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each articles}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>
                    <img src="{{this.image}}" height="144px" width="100px">
                </td>
                <td>{{this.description}}</td>
                <td>
                    <a href="" data-id="{{this._id}}" class="btn btn-link btn-restore">Restore</a>
                    <a href="" data-id="{{this._id}}" class="btn btn-link" data-toggle="modal" data-target="#delete-article-modal">Force delete</a>
                </td>
            </tr>
            {{else}}
            <tr>
				<td colspan="5" class="text-center">
					Empty. Try to delete some books to fill this recycle bin :D
				</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div id="delete-article-modal" class="modal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title">Confirm Delete Action</h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="modal-body">
			<p>Are you sure you want to delete this book?</p>
		</div>
		<div class="modal-footer">
			<button id="btn-delete-article" type="button" class="btn btn-danger">Yeah, do it.</button>
			<button type="button" class="btn btn-secondary" data-dismiss="modal">No, thanks.</button>
		</div>
		</div>
	</div>
</div>

<form method="POST" name="delete-article-form" enctype="application/x-www-form-urlencoded">
  	<input type="hidden" name="_method" value="DELETE">
</form>

<form method="POST" name="restore-article-form" enctype="application/x-www-form-urlencoded">
  	<input type="hidden" name="_method" value="PATCH">
</form>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        let articleId;
        let deleteForm = document.forms["delete-article-form"];
        let restoreForm = document.forms["restore-article-form"];
        const deleteArticleBtn = document.querySelector("#btn-delete-article");
        const restoreArticleBtn = $(".btn-restore");

        $('#delete-article-modal').on('show.bs.modal', function (event) {
            let button = $(event.relatedTarget);
            articleId = button.data('id');
        });

        deleteArticleBtn.onclick = function() {
            deleteForm.action = `/articles/${articleId}/force`;
            deleteForm.submit();
        }

        restoreArticleBtn.onclick = function(e) {
            e.preventDefault();
            let restoreArticleId = $(this).data('id');

            restoreForm.action = `/articles/${restoreArticleId}/restore`;
            restoreForm.submit();
        }
    })
</script>