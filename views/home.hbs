<div class="mt-4">
    <div class="row">
        {{#each articles}}
        <div class="col-sm-6 col-lg-4">
            <div class="card article-item">
                <img class="card-img-top" src="{{this.image}}" width="328px" height="500px">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/articles/{{this.slug}}" class="btn btn-primary">Detail</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="mt-4">
            You have not added any books.
            <a href="/articles/new">Click here to add one now</a>
        </div>
        {{/each}}
    </div>
</div>

<script src="/script/private.js"></script>