<div class="mt-4">
    <h1>Edit book</h1>

    <form class="mt-4" method="POST" action="/articles/{{article._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" value="{{article.name}}" id="name">
        </div>

        <div class="form-group">
            <label for="image">Image</label>
            <input type="text" name="image" class="form-control" value="{{article.image}}" id="image">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description">{{article.description}}</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>