<div class="mt-4">
    <h1>My Books</h1>

    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each articles}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>
                    <img src="{{this.image}}" height="143px" width="100px">
                </td>
                <td>{{this.description}}</td>
                <td>
                    <a href="/articles/{{this._id}}/edit" class="btn btn-link">Edit</a>
                    <a href="" data-id="{{this._id}}" class="btn btn-link" data-toggle="modal" data-target="#delete-article-modal">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div id="delete-article-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Delete Action</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this book?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-article" type="button" class="btn btn-danger">Yeah, do it.</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No, thanks.</button>
      </div>
    </div>
  </div>
</div>

{{!-- Delete hidden form --}}
<form method="POST" name="delete-article-form"></form>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        let articleId;
        let deleteForm = document.forms["delete-article-form"];
        const btnDeleteArticle = document.querySelector("#btn-delete-article");

        $('#delete-article-modal').on('show.bs.modal', function (event) {
            let button = $(event.relatedTarget);
            articleId = button.data('id');
        });

        btnDeleteArticle.onclick = function() {
            deleteForm.action = '/articles/' + articleId + '?_method=DELETE';
            deleteForm.submit();
        }
    })
</script>